# Sight - Environment Variables Template
# ========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# Google Gemini API Key (required)
# Get your key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_gemini_api_key_here

# Database Configuration
# Defaults work with docker-compose, change for production
DATABASE_URL=postgresql+asyncpg://sight:dev_password_change_in_prod@localhost:5433/sight_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=sight
POSTGRES_PASSWORD=dev_password_change_in_prod
POSTGRES_DB=sight_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Neo4j Configuration (Graph Database)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=dev_password_change_in_prod

# Security
# Generate a secure key with: openssl rand -hex 32
SECRET_KEY=your_secret_key_min_32_chars_use_openssl_rand_hex_32
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=Sight
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
STRUCTURED_LOGGING_ENABLED=false

# Feature Flags
ORCHESTRATION_ENABLED=true  # Enable Gemini 2.5 Pro orchestration
RAG_ENABLED=true            # Enable RAG (Retrieval-Augmented Generation)
WORKFLOWS_ENABLED=true      # Enable Workflow Builder feature

# Embedding Model
EMBEDDING_MODEL=models/gemini-embedding-001

# Google Cloud Platform (for Cloud Tasks integration in production)
GCP_PROJECT_ID=gen-lang-client-0508446677
GCP_REGION=europe-central2
SERVICE_URL=https://sight-xfabt2svwa-lm.a.run.app  # Cloud Run service URL

# Optional: Other LLM Providers
# Uncomment and set if using multi-provider support (requires pip install -e ".[llm-providers]")
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
