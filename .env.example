# Database (Docker exposes PostgreSQL on port 5433)
DATABASE_URL=postgresql+asyncpg://market_research:dev_password_change_in_prod@localhost:5433/market_research_db
POSTGRES_USER=market_research
POSTGRES_PASSWORD=dev_password_change_in_prod
POSTGRES_DB=market_research_db

# Redis
REDIS_URL=redis://localhost:6379/0

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=dev_password_change_in_prod

# LLM APIs
GOOGLE_API_KEY=your_google_api_key_here

# Optional: Alternative LLM providers
OPENAI_API_KEY=your_openai_api_key_here_optional
ANTHROPIC_API_KEY=your_anthropic_api_key_here_optional

# Application Settings
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Persona Generation
DEFAULT_LLM_PROVIDER=google  # google, openai, or anthropic
DEFAULT_MODEL=gemini-2.5-flash 
TEMPERATURE=0.7
MAX_TOKENS=8000

# Performance Targets
MAX_RESPONSE_TIME_PER_PERSONA=3  # seconds
MAX_FOCUS_GROUP_TIME=30  # seconds
CONSISTENCY_ERROR_THRESHOLD=0.05  # 5%
STATISTICAL_SIGNIFICANCE_THRESHOLD=0.05  # p-value for chi-square

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=True