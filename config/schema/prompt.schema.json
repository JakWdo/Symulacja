{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Prompt Template Schema",
  "description": "JSON schema for validating prompt YAML files",
  "type": "object",
  "required": ["id", "version", "description", "messages"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z_]+\\.[a-z_]+$",
      "description": "Prompt ID in format 'domain.name'"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (e.g., '1.0.0')"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "description": "Human-readable description of the prompt"
    },
    "messages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["role", "content"],
        "properties": {
          "role": {
            "type": "string",
            "enum": ["system", "user", "assistant"]
          },
          "content": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
