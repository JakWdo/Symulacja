# ==============================================================================
# Dockerfile.cloudrun - Single Service (Backend + Frontend Static)
# ==============================================================================
# Multi-stage build:
# 1. Build React frontend
# 2. Install Python dependencies
# 3. Runtime with backend code + frontend static files
# ==============================================================================

# ==============================================================================
# STAGE 1: Build Frontend (React + Vite)
# ==============================================================================
FROM node:20-alpine AS frontend-builder

WORKDIR /app/frontend

# Copy package files for caching
COPY frontend/package*.json ./

# Install dependencies
RUN npm ci

# Copy frontend source
COPY frontend/ ./

# Build production bundle
# Output: /app/frontend/dist/
RUN npm run build

# ==============================================================================
# STAGE 2: Build Backend (Python dependencies)
# ==============================================================================
FROM python:3.11-slim AS backend-builder

WORKDIR /app

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install gunicorn (not in requirements.txt for local dev)
RUN pip install --no-cache-dir gunicorn

# ==============================================================================
# STAGE 3: Runtime (Backend + Frontend Static)
# ==============================================================================
FROM python:3.11-slim AS runtime

# Production environment
ARG TARGET=production
ENV TARGET=${TARGET}
ENV PYTHONPATH=/app
ENV PORT=8080

WORKDIR /app

# Install runtime dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Copy Python packages from builder
COPY --from=backend-builder /usr/local/lib/python3.11/site-packages /usr/local/lib/python3.11/site-packages
COPY --from=backend-builder /usr/local/bin /usr/local/bin

# Copy backend code
COPY app/ ./app/
COPY scripts/ ./scripts/
COPY alembic/ ./alembic/
COPY alembic.ini ./

# Copy frontend dist → static/
COPY --from=frontend-builder /app/frontend/dist ./static/

# Create non-root user
RUN useradd -m -u 1000 appuser && chown -R appuser:appuser /app

# Expose Cloud Run port
EXPOSE $PORT

# Start gunicorn
# --bind :$PORT              → Listen on Cloud Run port (8080)
# --workers 1                → Single worker (Cloud Run scales horizontally)
# --threads 8                → 8 threads for concurrency
# --timeout 0                → No timeout (LLM requests can take 30+ seconds)
# --log-level info           → Production logging
# --worker-class uvicorn...  → ASGI support for FastAPI
CMD exec gunicorn --bind :$PORT --workers 1 --threads 8 --timeout 0 --log-level info --access-logfile - --error-logfile - app.main:app --worker-class uvicorn.workers.UvicornWorker

# Switch to non-root user LAST (after all chown operations)
USER appuser
